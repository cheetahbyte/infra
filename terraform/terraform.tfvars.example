# Example terraform.tfvars
# Copy this to terraform.tfvars and fill in your values

# Required: Hetzner Cloud API Token
hcloud_token = "your-hetzner-cloud-api-token-here"

# Optional: Customize cluster settings
cluster_name = "my-k8s-cluster"
location = "nbg1"  # Available: nbg1, fsn1, hel1, ash, hil
server_type = "cx22"  # Smallest recommended: cx22 (2vCPU, 4GB RAM)
worker_count = 2

# IPv6-only configuration (recommended)
enable_ipv4 = false